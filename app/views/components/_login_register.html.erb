              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <%= link_to 'REGISTER', "javascript:void(0)", class: 'btn btn-theme btn-lg btn-block', data: {toggle: 'collapse', target: '#root-register'} %>
              </div>
              <div class="collapse" id="root-register">
                <%= render partial: 'users/form' %>
