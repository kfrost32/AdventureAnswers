<!-- Fixed navbar -->
<div class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= image_tag 'log.png',   style: 'height:50px; float:left;margin-right: 10px;' %>
      <%= link_to site_title_text, root_path, class: 'navbar-brand' %>

    </div>
    <div class="navbar-collapse collapse navbar-right">
      <ul class="nav navbar-nav">
        <%= link_to_list_item 'About', '/about' %>
        <% if current_user %>
          <%= link_to 'Submit', new_item_path, class: 'btn ' %>
          <% if @item && @item.persisted? && @item.user_id == current_user.id %>
            <%= link_to_list_item 'edit', edit_item_path(@item) %>
          <% end %>
        <% else %>
          <%# link_to_list_item 'Join', new_user_path %>
          <%= link_to_list_item 'Log In', :login %>
        <% end %>

        <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Profile <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <%= link_to_list_item current_user.username, current_user %>
              <%= link_to_list_item 'Edit Profile', edit_user_path(current_user) %>
              <%= link_to_list_item 'Logout', logout_path, method: :post %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= render 'components/flash' %>


