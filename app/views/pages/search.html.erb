<h1>Search</h1>
<div>
   <input id="search-input" class="form-control" placeholder="Search for posts">
   <!-- We use a specific placeholder in the input to guides users in their search. -->
</div>
    <div id="hits">
    <script type="text/html" id="hit-template">
      <div class="search-result">
      <a href="http://www.localhost:3000/items/{{id}}">
        <div class="search-body">
          <h3 class="search-heading">{{title}}</h3>
          <p class="search-meta">{{{content}}}</p>
        </div>
      </a>
      </div>
    </script></div>
    <div id="pagination"></div>
</div>

