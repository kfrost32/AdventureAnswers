<div class="col-lg-12">
<%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, placeholder: "edmund@everest.nz"%>
  <%= f.input :username, placeholder: "topoftheworld" %>
  <%= f.input :password, as: :password, placeholder: "at least 5 characters please!" %>
  <%= f.input :password_confirmation, as: :password %>
  <%= f.input :about, placeholder: "I create content with my friend Tenzing. #blessed #instagram"%>
  <div class="row">
    <%= f.button :submit, 'Submit', class: 'btn-block' %>
  </div>
<% end %>
</div>

