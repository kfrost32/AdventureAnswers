<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>
  Leave the url blank to submit a question.
  <%= f.input :title, placeholder: "What are your favorite outdoor apps?" %>
  <div style="padding-bottom: 10px;">Add a link <strong>or</strong> a question.</div>

  <%= f.input :url, as: :url, label: false, placeholder: "URL" %>
  <%= f.input :content, as: :text, label: false, placeholder: "Description", :input_html => { :rows => 7} %>
  <div>

  </div>

  <%= f.button :submit %>
<% end %>
