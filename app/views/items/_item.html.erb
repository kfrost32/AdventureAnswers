
<li class="media">
  <div class="media-left">
    <a href="#">
      <%= render_votes_for_item(item) %>
      <%= item.score %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <% if item.url.present? %>
        <%= link_to item.title, item.url, title: item.url, target: '_blank' %>
        <small>(<%= URI.parse(item.url).host %>)</small>
      <% else %>
        <%= link_to item.title, item, title: truncate(item.content, length: 30) %>
        <span  style="font-size: 13px !important"><%= link_to '[discussion]', item %></span>
      <% end %>
    </h4>
    <small>
      <%= time_ago_in_words(item.created_at) %> ago by <%= render_link_to_user(item.user) %>
      | <%= link_to "#{item.comments_count} Comment".html_safe.pluralize, item %>
    </small>
  </div>
</li>
